{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-multiple-empty-lines": "error";
        "brace-style": "warn";
        "max-depth": ["error", 3];
    },
    "extends": "eslint:recommended" // zorgt ervoor dat alle 'standaard' rules worden geactiveerd
}
